<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_dish"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_horizontal_margin"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/dish_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:contentDescription="Fóto del plato"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name_dish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/dish_photo"
            android:layout_toRightOf="@id/dish_photo"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_dish"
            android:layout_toEndOf="@id/dish_photo"
            android:layout_toRightOf="@id/dish_photo" />

        <TextView
            android:id="@+id/dish_preparation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dish_price"
            android:layout_toEndOf="@id/dish_photo"
            android:layout_toRightOf="@id/dish_photo" />


        <ImageView
            android:id="@+id/dish_favorite"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:contentDescription="Fóto Favorito"
            android:src="@mipmap/favorite"
            android:scaleType="centerCrop"
            android:visibility="invisible"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
